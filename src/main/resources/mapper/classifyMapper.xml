<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webshopback.entity.Classify">
    <!--父类目-->
    <resultMap id="classify" type="Classify">
       <id property="classifyId" column="classify_id"/>
       <result property="classifyName" column="classify_name"/>
       <result property="status" column="status"/>
    </resultMap>

    <!--子类目-->
    <resultMap id="subClassify" type="SubClassify">
        <id property="subClassifyId" column="sub_classify_id"/>
        <result property="subClassifyName" column="sub_class_name"/>
        <result property="status" column="status"/>
        <result property="mainClassifyId" column="main_classify_id"/>
    </resultMap>

    <!--查询所有的主类目-->
    <select id="findAllByClassify" resultMap="classify" resultType="Map">
        SELECT classify_id,classify_name,status
         from classify where status = TRUE ORDER BY classify_id
    </select>
    
    <select id="findClassifyName" resultType=""></select>

    <!--返回子类目-->
    <select id="findAllBySubClassify" resultMap="subClassify" resultType="Map">
        SELECT main_classify_id,sub_classify_id,sub_classify_name,status
        from sub_classify
        where status = TRUE GROUP BY main_classify_id ORDER BY sub_classify_id
    </select>


</mapper>